{
  // [vite] resolves the source map locations for the temporary Vite config file
  "debug.javascript.terminalOptions": {
    "resolveSourceMapLocations": [
      "${workspaceFolder}/**",
      "!**/node_modules/**",
      "**/node_modules/.vite-temp/**",
      "**/node_modules/.cache/.vite/**"
    ]
  },

  // Disable the default formatter, use eslint instead
  "prettier.enable": false,
  "editor.formatOnSave": false,

  // Auto fix
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never"
  },

  // Silent the stylistic rules in you IDE, but still auto fix them
  "eslint.rules.customizations": [
    { "rule": "style/*", "severity": "error", "fixable": true },
    { "rule": "format/*", "severity": "error", "fixable": true },
    { "rule": "*-indent", "severity": "error", "fixable": true },
    { "rule": "*-spacing", "severity": "error", "fixable": true },
    { "rule": "*-spaces", "severity": "error", "fixable": true },
    { "rule": "*-order", "severity": "error", "fixable": true },
    { "rule": "*-dangle", "severity": "error", "fixable": true },
    { "rule": "*-newline", "severity": "error", "fixable": true },
    { "rule": "*quotes", "severity": "error", "fixable": true },
    { "rule": "*semi", "severity": "error", "fixable": true }
  ],

  // Enable eslint for all supported languages
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "yaml",
    "toml",
    "xml",
    "gql",
    "graphql",
    "astro",
    "svelte",
    "css",
    "less",
    "scss",
    "pcss",
    "postcss"
  ],
  "cSpell.words": [
    "softgames"
  ],
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    ".idea": true,
    ".vscode": true,
    ".claude": true,
    ".github": true,
    "node_modules": true
  },

  "explorerExclude.backup": {},

  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    ".env": "*.env, .env.*, .envrc, env.d.ts",
    ".gitignore": ".gitattributes, .gitmodules, *ignore, .ignore*",
    "package.json": "bunfig.toml, bun.lock, pnpm-lock.yaml, pnpm-workspace.yaml, package-lock.json, .editorconfig, .huskyrc*, LICENSE, eslint.config.*, commitlint.config.*, README*, .gitignore, tasks.md, postcss.*, components.json, claude.md, GEMINI.md",
    "tsconfig.json": "tsconfig.*.json",
    "vite.config.ts": "index*.html",
    "*.tsx": "$(capture).ts, $(capture).*.ts, $(capture).*.tsx, $(capture)_*.ts, $(capture)_*.tsx, $(capture).css, $(capture).module.css, $(capture).less, $(capture).module.less, $(capture).module.less.d.ts, $(capture).scss, $(capture).module.scss, $(capture).module.scss.d.ts, $(capture).css.ts, $(capture).html, $(capture)*.md,",
    "*.ts": "$(capture)*.mjs,$(capture)*.js, $(capture).d.ts.map, $(capture).*.ts, $(capture).*.tsx, $(capture)_*.js, $(capture)_*.ts, $(capture)*.md,",
    "*.mts": "$(capture).mts.map, $(capture).*.mts, $(capture)_*.mts",
    "*.jsx": "$(capture).js, $(capture).*.jsx, $(capture)_*.js, $(capture)_*.jsx, $(capture).module.css, $(capture).less, $(capture).module.less, $(capture).module.less.d.ts, $(capture).scss, $(capture).module.scss, $(capture).module.scss.d.ts",
    "*.mjs": "$(capture).mjs.map, $(capture).*.mjs, $(capture)_*.mjs",
    "*.js": "$(capture).js.map, $(capture).*.js, $(capture)_*.js, $(capture).d.ts, $(capture).js.flow",
    "*.cjs": "$(capture).cjs.map, $(capture).*.cjs, $(capture)_*.cjs",
    "*.webp": "$(capture)*.png, $(capture)*.json",
    "*.ogg": "$(capture)*.mp3, $(capture)*.wav"
  }
}
